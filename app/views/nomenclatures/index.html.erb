<p id="notice"><%= notice %></p>

<h1>Nomenclatures</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nomenclatures.each do |nomenclature| %>
      <tr>
        <td><%= link_to 'Show', nomenclature %></td>
        <td><%= link_to 'Edit', edit_nomenclature_path(nomenclature) %></td>
        <td><%= link_to 'Destroy', nomenclature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nomenclature', new_nomenclature_path %>
